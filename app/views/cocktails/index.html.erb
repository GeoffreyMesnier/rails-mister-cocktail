
<div class="banner">
  <h1>Cocktails</h1>
</div>

<div class="container mt-4">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
        <div class="col-4">
          <%= link_to cocktail  do %>
            <div class="card-trip card-anim">
              <%= cl_image_tag cocktail.photo.key,width: 400, height: 300, crop: :fill %>
              <div class="card-trip-infos">
                <div>
                  <h2> <%= cocktail.name %></h2>
                </div>
              </div>
            </div>
          <% end %>
        </div>

    <% end %>
  </div>
</div>
<div class="container text-center mt-4 mb-4">
  <%= link_to "Create", new_cocktail_path , class:"btn btn-primary text-center btn-anim"%>
</div>



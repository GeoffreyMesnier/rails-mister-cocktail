
<div class="banner-show" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path @cocktail.photo.key, crop: :fit %>')">
  <h1><%= @cocktail.name  %></h1>
</div>

<div class="container mt-4">
  <div class="show-content">
    <div>
    <h3>Ingredients</h3>
    <% @cocktail.doses.each do |dose| %>
        <h5> <%= dose.ingredient.name  %>
           Quantite: <%= dose.description  %>
           <i class="fas fa-trash"> <%= link_to 'Delete' , dose_path(dose), method: :delete %> </i>
        </h5>
    <% end %>

   <%= link_to "Index", cocktails_path, class:'btn btn-primary btn-anim' %>
   <%= link_to "Add doses", new_cocktail_dose_path(@cocktail) ,class:'btn btn-primary btn-anim' %>
   </div>
 </div>
</div>
